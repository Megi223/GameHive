<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .profile-pic-option {
      width: 80px;
      height: 80px;
      object-fit: cover;
      border: 2px solid transparent;
      border-radius: 50%;
      cursor: pointer;
      transition: border-color 0.3s ease-in-out;
    }
    .profile-pic-option:hover {
      border-color: #007bff;
    }
    .profile-pic-option.selected {
      border-color: #007bff;
    }
  </style>
</head>
<body>
  <div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow" style="max-width: 500px; width: 100%;">
      <h1 class="text-center mb-4">Register</h1>
      <% if (error) { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
      <% } %>
      <form action="/auth/register" method="POST">
        <div class="mb-3">
          <label for="name" class="form-label">Username</label>
          <input type="text" id="name" name="name" class="form-control" required>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" id="email" name="email" class="form-control" required>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" id="password" name="password" class="form-control" required minlength="8" maxlength="30">
        </div>
        <div class="mb-3">
          <label class="form-label">Choose an avatar</label>
          <div class="row">
            <div class="col-4 d-flex justify-content-center mb-3">
              <img src="https://res.cloudinary.com/dhsnrnzzt/image/upload/v1735133866/avatar-1_k7x74x.jpg" class="profile-pic-option" alt="Profile 1">
            </div>
            <div class="col-4 d-flex justify-content-center mb-3">
              <img src="https://res.cloudinary.com/dhsnrnzzt/image/upload/v1735133860/avatar-2_pipnta.jpg" class="profile-pic-option" alt="Profile 2">
            </div>
            <div class="col-4 d-flex justify-content-center mb-3">
              <img src="https://res.cloudinary.com/dhsnrnzzt/image/upload/v1735133862/avatar-3_uqbfth.jpg" class="profile-pic-option" alt="Profile 3">
            </div>
            <div class="col-4 d-flex justify-content-center">
              <img src="https://res.cloudinary.com/dhsnrnzzt/image/upload/v1735133862/avatar-4_shfvli.jpg" class="profile-pic-option" alt="Profile 4">
            </div>
            <div class="col-4 d-flex justify-content-center">
              <img src="https://res.cloudinary.com/dhsnrnzzt/image/upload/v1735133862/avatar-5_wfmwct.jpg" class="profile-pic-option" alt="Profile 5">
            </div>
            <div class="col-4 d-flex justify-content-center">
              <img src="https://res.cloudinary.com/dhsnrnzzt/image/upload/v1735133867/avatar-6_jnlavk.jpg" class="profile-pic-option" alt="Profile 6">
            </div>
          </div>
          <input type="hidden" name="profilePicture" id="profilePicture">
        </div>
        <button type="submit" class="btn btn-primary w-100">Register</button>
      </form>
      <div class="text-center mt-3">
        <a href="/auth/login" class="text-decoration-none">Already have an account? Login</a>
      </div>
    </div>
  </div>

  <script>
    const profilePicOptions = document.querySelectorAll('.profile-pic-option');
    const profilePictureInput = document.getElementById('profilePicture');

    profilePicOptions.forEach(option => {
      option.addEventListener('click', () => {
        profilePicOptions.forEach(opt => opt.classList.remove('selected'));
        option.classList.add('selected');
        profilePictureInput.value = option.getAttribute('src');
      });
    });
  </script>
</body>
</html>
